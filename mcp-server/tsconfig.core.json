{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/resilient-index.ts",
    "src/resilient-bridge-client.ts",
    "src/utils/logger.ts",
    "src/security.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}
