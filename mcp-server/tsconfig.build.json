{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": [
    "src/index.ts",
    "src/bridge-client.ts", 
    "src/types.ts",
    "src/utils/**/*",
    "src/security.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "**/*.test.ts", 
    "**/*.spec.ts",
    "src/observability/**/*",
    "src/resilience/**/*",
    "src/config/**/*",
    "src/resilient-*.ts"
  ]
}