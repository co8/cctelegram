{
  "name": "cctelegram-docs",
  "version": "1.0.0",
  "description": "Documentation for CCTelegram MCP Server",
  "private": true,
  "type": "module",
  "scripts": {
    "docs:dev": "npm run copy:openapi && vitepress dev",
    "docs:build": "npm run api:generate && npm run copy:openapi && vitepress build",
    "docs:preview": "vitepress preview",
    "docs:serve": "vitepress serve",
    "api:generate": "typedoc --options typedoc.config.js",
    "api:clean": "rm -rf api/",
    "copy:openapi": "cp ../../docs/mcp-server/api/openapi.yaml ./public/openapi.yaml",
    "clean": "rm -rf .vitepress/dist .vitepress/cache api/",
    "docs:version": "node scripts/version-docs.js",
    "docs:deploy": "node scripts/deploy-docs.js",
    "links:check": "linkinator .vitepress/dist --recurse --skip \"node_modules/**\"",
    "links:check:ci": "linkinator .vitepress/dist --recurse --format CSV --skip \"node_modules/**\" > link-check-results.csv",
    "links:markdown": "find . -name '*.md' -not -path './node_modules/*' | xargs markdown-link-check --config markdown-link-check.json",
    "links:markdown:ci": "find . -name '*.md' -not -path './node_modules/*' | xargs markdown-link-check --config markdown-link-check.json --progress --verbose > markdown-link-results.txt",
    "quality:check": "npm run links:check && npm run links:markdown && npm run spell:check",
    "quality:check:ci": "npm run links:check:ci && npm run links:markdown:ci && npm run spell:check:ci",
    "spell:check": "cspell \"**/*.md\" --config cspell.config.yaml",
    "spell:check:ci": "cspell \"**/*.md\" --config cspell.config.yaml --reporter @cspell/cspell-json-reporter > spell-check-results.json",
    "metrics:generate": "node scripts/docs-metrics.js",
    "metrics:dashboard": "node scripts/metrics-dashboard.js"
  },
  "devDependencies": {
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1", 
    "vitepress": "^1.0.0",
    "@types/node": "^20.11.5",
    "swagger-ui-dist": "^5.10.5",
    "redoc": "^2.1.3",
    "yaml": "^2.3.4",
    "linkinator": "^6.0.4",
    "markdown-link-check": "^3.12.2",
    "cspell": "^8.1.3",
    "@cspell/cspell-json-reporter": "^8.1.3",
    "semver": "^7.5.4",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4"
  },
  "dependencies": {
    "swagger-ui-express": "^5.0.0"
  }
}