{
  "name": "cctelegram-docs",
  "version": "1.0.0",
  "description": "Documentation for CCTelegram MCP Server",
  "private": true,
  "type": "module",
  "scripts": {
    "docs:dev": "npm run copy:openapi && vitepress dev",
    "docs:build": "npm run api:generate && npm run copy:openapi && vitepress build",
    "docs:preview": "vitepress preview",
    "docs:serve": "vitepress serve",
    "api:generate": "typedoc --options typedoc.config.js",
    "api:clean": "rm -rf api/",
    "copy:openapi": "cp ../../@docs/mcp-server/api/openapi.yaml ./public/openapi.yaml",
    "clean": "rm -rf .vitepress/dist .vitepress/cache api/"
  },
  "devDependencies": {
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1", 
    "vitepress": "^1.0.0",
    "@types/node": "^20.11.5",
    "swagger-ui-dist": "^5.10.5",
    "redoc": "^2.1.3",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "swagger-ui-express": "^5.0.0"
  }
}