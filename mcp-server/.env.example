# CC Telegram MCP Server Security Configuration

# Authentication Settings
MCP_ENABLE_AUTH=true
MCP_API_KEYS=your-secure-api-key-1,your-secure-api-key-2

# HMAC Secret for integrity verification (generate with openssl rand -hex 32)
MCP_HMAC_SECRET=your-256-bit-secret-key-here

# Rate Limiting Configuration
MCP_ENABLE_RATE_LIMIT=true
MCP_RATE_LIMIT_POINTS=100
MCP_RATE_LIMIT_DURATION=60

# Input Validation
MCP_ENABLE_INPUT_VALIDATION=true

# Secure Logging
MCP_ENABLE_SECURE_LOGGING=true
MCP_LOG_LEVEL=warn

# Bridge Integration (required)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ALLOWED_USERS=user1,user2,user3

# Optional: Custom directories
# CC_TELEGRAM_EVENTS_DIR=~/.cc_telegram/events
# CC_TELEGRAM_RESPONSES_DIR=~/.cc_telegram/responses
# CC_TELEGRAM_HEALTH_PORT=8080