{
  "dashboard": {
    "id": null,
    "title": "CCTelegram System Overview",
    "tags": ["cctelegram", "overview", "system"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"cctelegram\"}",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            },
            "mappings": [
              { "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "options": { "1": { "text": "UP", "color": "green" } } }
            ]
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(cctelegram_tier_requests_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Active Correlations",
        "type": "stat",
        "targets": [
          {
            "expr": "cctelegram_active_correlations",
            "legendFormat": "Active"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Failover Events",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(cctelegram_failover_events_total[1h])",
            "legendFormat": "Failovers/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Request Volume by Tier",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (tier) (rate(cctelegram_tier_requests_total[5m]))",
            "legendFormat": "{{tier}}"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
      },
      {
        "id": 6,
        "title": "Success Rate by Tier",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (tier) (rate(cctelegram_tier_success_total[5m])) / sum by (tier) (rate(cctelegram_tier_requests_total[5m]))",
            "legendFormat": "{{tier}}"
          }
        ],
        "yAxes": [
          {
            "unit": "percentunit",
            "min": 0.8,
            "max": 1
          }
        ],
        "thresholds": [
          {
            "value": 0.95,
            "colorMode": "critical",
            "op": "lt"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
      },
      {
        "id": 7,
        "title": "Error Severity Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (tier, severity) (increase(cctelegram_error_severity_distribution[10m]))",
            "legendFormat": "{{tier}}-{{severity}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
      },
      {
        "id": 8,
        "title": "Tier Selection Scores",
        "type": "heatmap",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (tier, score_type, le) (rate(cctelegram_tier_score_histogram_bucket[5m])))",
            "legendFormat": "{{tier}}-{{score_type}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
      },
      {
        "id": 9,
        "title": "Circuit Breaker Trips",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (tier, reason) (increase(cctelegram_circuit_breaker_trips_total[1h]))",
            "legendFormat": "{{tier}}-{{reason}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" }
          }
        },
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 20 }
      },
      {
        "id": 10,
        "title": "Self-Healing Activities",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (tier, healing_type) (rate(cctelegram_self_healing_attempts_total[5m]))",
            "legendFormat": "{{tier}}-{{healing_type}} attempts"
          },
          {
            "expr": "sum by (tier, healing_type) (rate(cctelegram_self_healing_success_total[5m]))",
            "legendFormat": "{{tier}}-{{healing_type}} success"
          }
        ],
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 20 }
      },
      {
        "id": 11,
        "title": "Queue Depths by Priority",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (priority) (cctelegram_priority_queue_depth)",
            "legendFormat": "{{priority}}"
          }
        ],
        "yAxes": [
          {
            "min": 0
          }
        ],
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 20 }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "10s"
  }
}